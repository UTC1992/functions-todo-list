{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "tsconfig.json",
    "tsconfig.dev.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}