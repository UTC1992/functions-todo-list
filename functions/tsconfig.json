{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "tsconfig.json",
    "tsconfig.dev.json"
  ]
}